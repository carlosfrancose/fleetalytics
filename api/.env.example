# Example environment configuration file for the Fleetalytics API.

# Database configuration, use this format for MySQL Connector. 
# Replace 'user', 'password', and 'localhost' with actual database credentials.
DATABASE_URI=mysql+mysqlconnector://user:password@localhost:3306/fleetalytics

# API configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# SQLAlchemy/MySQL configuration
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=True
DB_ECHO=False
DB_ECHO_POOL=False

# Logging level
LOG_LEVEL=INFO